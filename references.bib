keywords = {Computing Methodologies,Electronic,Electronics,Electronics: instrumentation,Electronics: methods,Germanium,Logic,Nanotechnology,Nanotechnology: instrumentation,Nanotechnology: methods,Nanowires,Nanowires: chemistry,Silicon,Transistors},
number = {7333},

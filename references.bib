isbn = {0003-6951},
issn = {00036951},
journal = {Applied Physics Letters},
number = {4},
pages = {043111},
title = {{Near-field scanning photocurrent microscopy of a nanowire photodetector}},
url = {http://scitation.aip.org/content/aip/journal/apl/87/4/10.1063/1.1996851},
volume = {87},
year = {2005}
}
